		<put-attribute name="title"
			value="My fireSensors homepage" />
		<put-attribute name="body"
			value="/WEB-INF/views/fireSensors.jsp" />
	</definition>

	<definition name="admin" extends="base">
		<put-attribute name="title" value="My admin homepage" />
		<put-attribute name="body"
			value="/WEB-INF/views/admin.jsp" />
	</definition>


	<definition name="login" extends="base">
		<put-attribute name="title" value="login Page" />
		<put-attribute name="body"
			value="/WEB-INF/views/login.jsp" />
	</definition>

	<definition name="location" extends="base">
		<put-attribute name="title" value="location Page" />
		<put-attribute name="body"
			value="/WEB-INF/views/location.jsp"/>
	</definition>

	<definition name="empty"
		template="/WEB-INF/templates/empty.jsp">
	</definition>
	
	<definition name="sendFCM"
